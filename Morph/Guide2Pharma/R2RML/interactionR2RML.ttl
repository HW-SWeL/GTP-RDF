@base <http://rdf.guidetopharmacology.org/GRAC/> .
@prefix bao: <http://www.bioassayontology.org/bao#>.
@prefix gtpo: <http://rdf.guidetopharmacology.org/ns/gtpo#>.
@prefix ncbi: <http://purl.obolibrary.org/obo/NCBITaxon_>.
@prefix pmid: <http://identifiers.org/pubmed/>.
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.

#######################################
# Generate key interaction data - id, #
# participants, type and taxonomy     #
#######################################

	<TriplesMap1>
    a rr:TriplesMap;

    rr:logicalTable [ rr:sqlQuery """
		SELECT
		interaction.interaction_id AS id,
		interaction.ligand_id AS ligand,
		interaction.object_id AS target,
		interaction.type AS type,
		species.ncbi_taxonomy_id AS ncbi,
		CASE
		WHEN type = 'Activator' THEN 'ActivatorInteraction'
		WHEN type = 'Agonist' THEN 'AgonistInteraction'
		WHEN type = 'Allosteric modulator' THEN 'AllostericModulatorInteraction'
		WHEN type = 'Antagonist' THEN 'AntagonistInteraction'
		WHEN type = 'Antibody' THEN 'AntibodyInteraction'
		WHEN type = 'Channel blocker' THEN 'ChannelBlockerInteraction'
		WHEN type = 'Gating inhibitor' THEN 'GatingInhibitorInteraction'
		WHEN type = 'Inhibitor' THEN 'InhibitorInteraction'
		WHEN type = 'None' THEN 'Interaction'
		WHEN type = 'Subunit-specific' THEN 'SubunitSpecificInteraction'
		END AS actiontype,
		action,
		CASE
		WHEN action = 'Activation' THEN 'ActivationAction'
		WHEN action = 'Agonist' THEN 'AgonistAction'
		WHEN action = 'Antagonist' THEN 'AntagonistAction'
		WHEN action = 'Biased agonist' THEN 'BiasedAgonistAction'
		WHEN action = 'Binding' THEN 'BindingAction'
		WHEN action = 'Biphasic' THEN 'BiphasicAction'
		WHEN action = 'Competitive' THEN 'CompetitiveAction'
		WHEN action = 'Feedback inhibition' THEN 'FeedbackInhibitionAction'
		WHEN action = 'Full agonist' THEN 'FullAgonistAction'
		WHEN action = 'Inhibition' THEN 'InhibitionAction'
		WHEN action = 'Inverse agonist' THEN 'InverseAgonistAction'
		WHEN action = 'Irreversible agonist' THEN 'IrreversibleAgonistAction'
		WHEN action = 'Irreversible inhibition' THEN 'IrreversibleInhibitionAction'
		WHEN action = 'Mixed' THEN 'MixedAction'
		WHEN action = 'Negative' THEN 'NegativeAction'
		WHEN action = 'Neutral' THEN 'NeutralAction'
		WHEN action = 'None' THEN 'NoAction'
		WHEN action = 'Non-competitive' THEN 'NonCompetitiveAction'
		WHEN action = 'Partial agonist' THEN 'PartialAgonistAction'
		WHEN action = 'Pore blocker' THEN 'PoreBlockerAction'
		WHEN action = 'Positive' THEN 'PositiveAction'
		WHEN action = 'Potentiation' THEN 'PotentiationAction'
		WHEN action = 'Slows inactivation' THEN 'SlowsInactivationAction'
		WHEN action = 'Unknown' THEN 'Action'
		WHEN action = 'Voltage-dependent inhibition' THEN 'VoltageDependentInhibitionAction'
		END AS interactionaction
		FROM interaction, species
		WHERE interaction.species_id = species.species_id;
		""";] ;

    rr:subjectMap [ rr:template "http://rdf.guidetopharmacology.org/GRAC/interaction{id}" ];

	rr:predicateObjectMap
    [
      rr:predicate	rdf:type;
      rr:objectMap	[ rr:template "http://rdf.guidetopharmacology.org/ns/gtpo#{actiontype}" ];
    ];
    rr:predicateObjectMap
    [
      rr:predicate	gtpo:hasLigand ;
      rr:objectMap	[ rr:template "http://rdf.guidetopharmacology.org/GRAC/ligand{ligand}" ];
    ];
	 rr:predicateObjectMap [
        rr:predicate gtpo:hasTarget;
        rr:objectMap [ rr:template "http://rdf.guidetopharmacology.org/GRAC/target{target}" ];
	];
	 rr:predicateObjectMap [
      rr:predicate	gtpo:hasAction;
      rr:objectMap	[ rr:template "http://rdf.guidetopharmacology.org/ns/gtpo#{interactionaction}" ];
    ];
	 rr:predicateObjectMap [
        rr:predicate gtpo:hasTaxonomy;
        rr:objectMap [ rr:template "http://purl.obolibrary.org/obo/NCBITaxon_{ncbi}" ];
	]
	.

#######################################################
# Generates the blank node for storing affinity data, #
# where there exists an affinity value                #
#######################################################

	<TriplesMap2>
	a rr:TriplesMap;
	rr:logicalTable [ rr:sqlQuery """
	SELECT interaction_id AS id
	FROM interaction
	WHERE affinity_units <> '-'
	AND (affinity_high IS NOT NULL OR affinity_median IS NOT NULL);
	""";];
	rr:subjectMap [rr:template "http://rdf.guidetopharmacology.org/GRAC/interaction{id}";];
	rr:predicateObjectMap
	[
		rr:predicate gtpo:hasAffinity;
		rr:objectMap [ rr:template "http://rdf.guidetopharmacology.org/GRAC/affinity{id}"	];
	]
	.

###############################################################
# Generate affinity data for actions with high and low values #
###############################################################

	<TriplesMap3>
    a rr:TriplesMap;
    rr:logicalTable [ rr:sqlQuery """
		SELECT affinity_low AS low,
		interaction_id AS id,
		affinity_high AS high,
		affinity_units,
		CASE
		WHEN affinity_units = 'pIC50' THEN 'BAO_0000199'
		WHEN affinity_units = 'pEC50' THEN 'BAO_0002583'
		WHEN affinity_units = 'pKB' THEN 'pKB'
		WHEN affinity_units = 'pKi' THEN 'pKi'
		WHEN affinity_units = 'pA2' THEN 'BAO_0003038'
		WHEN affinity_units = 'pKd' THEN 'pKd'
		WHEN affinity_units = '-' THEN '-'
		END AS units
		FROM interaction
		WHERE affinity_low IS NOT NULL
		AND affinity_high IS NOT NULL;
		""";] ;

    rr:subjectMap [ rr:template "http://rdf.guidetopharmacology.org/GRAC/affinity{id}" ];

		rr:predicateObjectMap
		[
		rr:predicate	rdf:type;
		rr:objectMap	[ rr:template "http://rdf.guidetopharmacology.org/ns/gtpo#Affinity" ];
		];

    rr:predicateObjectMap
    [
      rr:predicate	gtpo:hasHighValue ;
      rr:objectMap	[ rr:column "high" ];
    ];
	 rr:predicateObjectMap [
        rr:predicate gtpo:hasLowValue;
        rr:objectMap [ rr:column "low" ];
	];
	 rr:predicateObjectMap [
        rr:predicate gtpo:hasUnits;
        rr:objectMap [ rr:template "http://www.bioassayontology.org/bao/bao_complete.owl#{units}" ];
	]
	.

#########################################################
# Generate affinity data for actions with median values #
#########################################################

	<TriplesMap4>
    a rr:TriplesMap;

    rr:logicalTable [ rr:sqlQuery """
			SELECT affinity_median AS value,
			interaction_id AS id,
			affinity_units,
			CASE
			WHEN affinity_units = 'pIC50' THEN 'BAO_0000199'
			WHEN affinity_units = 'pEC50' THEN 'BAO_0002583'
			WHEN affinity_units = 'pKB' THEN 'pKB'
			WHEN affinity_units = 'pKi' THEN 'pKi'
			WHEN affinity_units = 'pA2' THEN 'BAO_0003038'
			WHEN affinity_units = 'pKd' THEN 'pKd'
			END AS units
			FROM interaction
			WHERE affinity_units <> '-'
			AND affinity_median IS NOT NULL;
		""";] ;

    rr:subjectMap [ rr:template "affinity{id}";
					rr:termType rr:BlankNode;];

    rr:predicateObjectMap
    [
      rr:predicate	gtpo:hasMedianValue;
      rr:objectMap	[ rr:column "value" ];
    ];
	 rr:predicateObjectMap [
       rr:predicate gtpo:hasUnits;
       rr:objectMap [ rr:template "http://www.bioassayontology.org/bao/bao_complete.owl#{units}" ];
	]
	.

############################################################
# Generate interaction affinity references using pubmed id #
############################################################


	<TriplesMap5>
    a rr:TriplesMap;

    rr:logicalTable [ rr:sqlQuery """
		SELECT interaction_id AS id,
		pubmed_id as pmid
		FROM interaction_affinity_refs I, reference R
		WHERE I.reference_id = r.reference_id
		AND pubmed_id IS NOT NULL;
		""";] ;

    rr:subjectMap [ rr:template "http://rdf.guidetopharmacology.org/GRAC/interaction{id}" ];

    rr:predicateObjectMap
    [
      rr:predicate	gtpo:hasReference;
      rr:objectMap	[ rr:template "http://identifiers.org/pubmed/{pmid}" ];
    ]
	.
